  "version": "0.0.1",
  "description": "Arcady assessment",
  "homepage": "https://arcady/remcostoeten.com",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "start": "next start",
    "build": "next build",
    "build-full": "rm -rf .next && rm -rf node_modules && pnpm install && pnpm format:write && pnpm build",
    "lint": "next lint",
    "format:write": "prettier --write \"**/*.{ts,tsx,mdx}\" --cache",
    "format": "next lint --fix && prettier '**/*.{json,yaml}' --write --ignore-path .gitignore",
    "typecheck": "tsc --noEmit --pretty"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "framer-motion": "^11.2.10",
    "lucide-react": "^0.394.0",
    "next": "14.2.4",
    "react": "^18",
    "react-dom": "^18",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "14.2.4",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
